<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> User Management Data Table</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-4">
                            <h2>Admin <b>Panel</b></h2>
                        </div>
                        <form action="/search" class="col-4" method="get">
                            <div class="d-flex">
                                <input type="text" class="form-control rounded" placeholder="Search" name="usname"/>
                            <button class="btn btn-outline-primary" type="submit">search</button>
                            </div>
                        </form>
                        <div class="col-4">
                            <a href="/admin-signOut" class="btn btn-secondary"><i
                                    class="bi bi-box-arrow-right"></i><span>Sign
                                    Out</span></a>
                            <a href="/add-user" class="btn btn-secondary"><span>Add New User</span></a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Age</th>
                            <th>Place</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i=1 %>
                            <% users.forEach(function(data){ %>
                                <tr>
                                    <td>
                                        <%= i %>
                                    </td>

                                    <td>
                                        <%= data.usname %>
                                    </td>
                                    <td><a href="#">
                                            <%= data.name %>
                                        </a></td>
                                    <td>
                                        <%= data.email %>
                                    </td>
                                    <td>
                                        <%= data.age %>
                                    </td>
                                    <td>
                                        <%= data.place %>
                                    </td>
                                    <td>
            </div>
            <a href="/edit-user/?id=<%= data._id %>" class="settings" title="Settings"><i
                    class="material-icons">&#xE8B8;</i></a>
            <a href="/delete-user/?id=<%= data._id %>" class="delete" title="Delete"
                onclick="return confirm('Are you want to delete <%= data.usname%>')"><i
                    class="material-icons">&#xE5C9;</i></a>
            </td>
            </tr>
            <% i++ %>
                <% }) %>
                    </tbody>
                    </table>
        </div>
    </div>
    </div>
    </div>
</body>

</html>